@using Credi_Express.Services
@{
    ViewData["Title"] = "NuevoPrestamo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .cliente-info-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .cliente-activo {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .cliente-inactivo {
        background: linear-gradient(135deg, #ff8a80 0%, #ff5722 100%);
    }

    .prestamo-card {
        transition: all 0.3s ease;
        border-left: 4px solid #007bff;
    }

    .prestamo-activo {
        border-left-color: #28a745;
        background-color: #f8fff8;
    }

    .prestamo-mora {
        border-left-color: #dc3545;
        background-color: #fff8f8;
    }

    .stat-badge {
        background: rgba(255,255,255,0.2);
        padding: 8px 12px;
        border-radius: 20px;
        display: inline-block;
        margin: 5px;
    }

    .calculadora-prestamo {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        margin-top: 15px;
    }

    .resultado-calculo {
        background: #e3f2fd;
        border-radius: 8px;
        padding: 15px;
        margin-top: 10px;
    }

    .warning-box {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 8px;
        padding: 15px;
        margin: 10px 0;
    }
</style>

<div class="container-fluid py-4">
    <!-- Header con información contextual -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="fas fa-plus-circle me-2 text-primary"></i>Nueva Solicitud de Préstamo</h2>
                    <p class="text-muted mb-0">Complete la información del cliente y configure los términos del préstamo</p>
                </div>
                <div>
                    <span class="badge bg-info fs-6">
                        <i class="fas fa-calendar me-1"></i>
                        <span id="fechaActual"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- PASO 1: Búsqueda de Cliente -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-search me-2"></i>Paso 1: Buscar Cliente
            </h5>
        </div>
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-6 mb-4">
                    <label for="dui" class="form-label fw-bold">
                        <i class="fas fa-id-card me-1"></i>DUI del Cliente
                    </label>
                    <input type="text" class="form-control form-control-lg dui" id="dui" name="Dui"
                           placeholder="00000000-0" maxlength="10" required
                           pattern="^\d{8}-\d{1}$"
                           oninvalid="this.setCustomValidity('El DUI debe tener el formato 00000000-0')"
                           oninput="this.setCustomValidity('')">
                    <div class="form-text">Formato: 12345678-9</div>
                </div>
                <div class="col-md-6 mb-4">
                    <label for="dui" class="form-label fw-bold">
                        <i class="fas fa-id-card me-1"></i>Buscar por Nombre
                    </label>
                    <input type="text" class="form-control form-control-lg" id="nombreApellido" name="nombres"
                           placeholder="Nombre/Apellido" maxlength="50" required
                           oninput="this.setCustomValidity('')">
                    <div class="form-text">Busca por Nombre</div>
                </div>
                <div class="col-md-3 mb-4">
                    <button type="button" onclick="busquedaCliente();" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-search me-2"></i>Buscar Cliente
                    </button>
                </div>
                <div class="col-md-3 mb-4">
                    <button type="button" class="btn btn-outline-success btn-lg w-100" onclick="limpiarFormulario()">
                        <i class="fas fa-refresh me-2"></i>Limpiar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- PASO 2: Selección de Cliente (cuando hay múltiples resultados) -->
    <div class="row" style="display: none;" id="rowSeleccionCliente">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Paso 2: Seleccionar Cliente
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Se encontraron varios clientes. Haga clic en el cliente correcto:</p>
                    <div id="clientesEncontrados">
                        <!-- Aquí se llenarán los clientes encontrados -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- PASO 2: Información del Cliente (Oculto inicialmente) -->
   <div class="row" style="display: none;" id="rowDetalleCliente">
        <div class="col-md-8">
            <!-- Información Principal del Cliente -->
            <div class="cliente-info-card" id="clienteInfoCard">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4 class="mb-2">
                            <i class="fas fa-user me-2"></i>
                            <span id="clienteNombre"></span>
                        </h4>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>DUI:</strong> <span id="clienteDui"></span></p>
                                <p class="mb-1"><strong>NIT:</strong> <span id="clienteNit"></span></p>
                                <p class="mb-0"><strong>Teléfono:</strong> <span id="clienteTelefono"></span></p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Dirección:</strong> <span id="clienteDireccion"></span></p>
                                <p class="mb-1"><strong>Gestor:</strong> <span id="clienteGestor"></span></p>
                                <p class="mb-0"><strong>Ingreso:</strong> <span id="clienteFechaIngreso"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div id="clienteEstadoBadge" class="stat-badge">
                            <i class="fas fa-user-check me-1"></i>
                            <span id="clienteEstadoTexto">Estado</span>
                        </div>
                        <div class="stat-badge">
                            <i class="fas fa-handshake me-1"></i>
                            <span id="clientePrestamosCount">0 Préstamos</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Resumen Rápido -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-chart-line me-2"></i>Resumen del Cliente
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Préstamos Activos:</span>
                        <strong id="prestamosActivos" class="text-success">0</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Prestado:</span>
                        <strong id="totalPrestado">$0.00</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Saldo Pendiente:</span>
                        <strong id="saldoPendiente" class="text-warning">$0.00</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Historial Crediticio:</span>
                        <span id="historialEstado" class="badge bg-success">Bueno</span>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- PASO 3: Configuración del Nuevo Préstamo -->
    <div class="row" style="display: none;" id="rowDetallePrestamo">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calculator me-2"></i>Paso 2: Configurar Nuevo Préstamo
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Advertencias si el cliente tiene problemas -->
                    <div id="advertenciasCliente" style="display: none;"></div>

                    <form action="/Auxiliares/CrearSolicitud" method="post" id="formNuevoPrestamo">
                        <input type="hidden" id="txtIdCliente" name="Idcliente" value="" required>
                        <input type="hidden" id="txtInteres" name="Interes" value="" required>
                        <input type="hidden" id="txtDomicilio" name="Domicilio" value="" required>

                        <div class="row">
                            <!-- Información Básica -->
                            <div class="col-md-4 mb-3">
                                <label for="txtfechaPrestamo" class="form-label fw-bold">
                                    <i class="fas fa-calendar me-1"></i>Fecha del Préstamo
                                </label>
                                <input type="date" class="form-control form-control-lg" id="txtfechaPrestamo"
                                       name="Fecha" required>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="txtMonto" class="form-label fw-bold">
                                    <i class="fas fa-dollar-sign me-1"></i>Monto del Préstamo
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">$</span>
                                    <input type="text" class="form-control money" id="txtMonto" name="Monto"
                                           required placeholder="0.00">
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="tipoPrestamo" class="form-label fw-bold">
                                    <i class="fas fa-clock me-1"></i>Tipo de Préstamo
                                </label>
                                <select id="tipoPrestamo" name="TipoPrestamo" class="form-select form-select-lg">
                                    <option value="DIARIO" selected="selected">📅 Diario</option>
                                    <option value="SEMANAL">📅 Semanal</option>
                                    <option value="QUINCENAL">📅 Quincenal</option>
                                    <option value="MENSUAL" selected>📅 Mensual</option>
                                </select>
                            </div>

                            <!-- Tasas y Términos -->
                            <div class="col-md-3 mb-3">
                                <label for="txtPorcentaje" class="form-label fw-bold">
                                    <i class="fas fa-percentage me-1"></i>Tasa de Interés
                                </label>
                                <div class="input-group">
                                    <input type="text" class="form-control porcentaje" id="txtPorcentaje"
                                           name="Tasa" required placeholder="0.0">
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label for="txtPorcentajeDomicilio" class="form-label fw-bold">
                                    <i class="fas fa-home me-1"></i>Tasa Domicilio
                                </label>
                                <div class="input-group">
                                    <input type="text" class="form-control porcentaje" id="txtPorcentajeDomicilio"
                                           name="TasaDomicilio" required placeholder="0.0">
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label for="txtCuotas" class="form-label fw-bold">
                                    <i class="fas fa-list-ol me-1"></i>Número de Cuotas
                                </label>
                                <input type="text" class="form-control numero-entero form-control-lg"
                                       id="txtCuotas" name="NumCoutas" required placeholder="numero de coutas">
                            </div>

                            <div class="col-md-3 mb-3">
                                <label for="txtCuotasMonto" class="form-label fw-bold">
                                    <i class="fas fa-money-bill me-1"></i>Cuota a Pagar
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="text" class="form-control" id="txtCuotasMonto"
                                           name="Cuota" readonly style="background-color: #e9ecef;">
                                </div>
                            </div>
                        </div>

                        <!-- Calculadora Visual -->
                        <div class="calculadora-prestamo" id="calculadoraVisual" style="display: none;">
                            <h6><i class="fas fa-calculator me-2"></i>Resumen del Préstamo</h6>
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <div class="text-center p-3 bg-primary text-white rounded">
                                        <div class="h5 mb-1" id="resumenMonto">$0.00</div>
                                        <small>Monto Principal</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-center p-3 bg-info text-white rounded">
                                        <div class="h5 mb-1" id="resumenInteres">$0.00</div>
                                        <small>Interés Total</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-center p-3 bg-warning text-white rounded">
                                        <div class="h5 mb-1" id="resumenDomicilio">$0.00</div>
                                        <small>Tasa Domicilio</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="text-center p-3 bg-success text-white rounded">
                                        <div class="h5 mb-1" id="resumenTotal">$0.00</div>
                                        <small>Total a Pagar</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="row mt-4">
                            <div class="col-12 d-flex justify-content-end gap-2">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <button type="button" class="btn btn-outline-secondary" onclick="limpiarFormulario()">
                                            <i class="fas fa-times me-2"></i>Cancelar
                                        </button>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <button type="button" class="btn btn-info" onclick="previsualizarPrestamo()">
                                            <i class="fas fa-eye me-2"></i>Previsualizar
                                        </button>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        @if (User.TienePermiso("Home/NuevoPrestamo", "Create"))
                                        {
                                            <button type="submit" class="btn btn-success" id="btnSubmit">
                                                <i class="fas fa-paper-plane me-2"></i>Crear Solicitud
                                            </button>
                                        }
                                    </div>
                                </div>                    
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Previsualización -->
<div class="modal fade" id="modalPreview" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-file-contract me-2"></i>Previsualización del Préstamo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="previewContent">
                <!-- Se llenará dinámicamente -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                @if (User.TienePermiso("Home/NuevoPrestamo", "Create"))
                {
                    <button type="button" class="btn btn-success" onclick="confirmarCreacion()">
                        <i class="fas fa-check me-1"></i>Confirmar y Crear
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Inicializar fecha actual
    document.getElementById('fechaActual').textContent = new Date().toLocaleDateString('es-ES');
    document.getElementById('txtfechaPrestamo').value = new Date().toISOString().split('T')[0];
</script>

<script src="~/js/nuevoprestamo.js"></script>