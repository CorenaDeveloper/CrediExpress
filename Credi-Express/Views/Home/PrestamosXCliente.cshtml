
@{
    ViewData["Title"] = "PrestamosXCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .cliente-info-card {
        border: 2px solid #e3e6f0;
        border-radius: 15px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        transition: all 0.3s ease;
    }

    .cliente-activo {
        border-color: #1cc88a !important;
    }

    .cliente-inactivo {
        border-color: #e74a3b !important;
    }

    .prestamo-card {
        transition: all 0.3s ease;
        border: 1px solid #e3e6f0;
    }

        .prestamo-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.25rem 2rem 0 rgba(58, 59, 69, 0.2);
        }



    .btn-detalle {
        background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
    }

        .btn-detalle:hover {
            background: linear-gradient(45deg, #5a6fd8 0%, #6a4190 100%);
            color: white;
        }

    .badge-estado {
        font-size: 0.85rem;
        padding: 0.5rem 1rem;
    }

    .table-pagos th {
        background-color: #f8f9fc;
        font-weight: 600;
    }
</style>
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-user-tie text-primary me-2"></i>
                        Historial Crediticio
                    </h1>
                    <p class="text-muted mb-0">Consulta el historial completo de préstamos de un cliente</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Búsqueda -->
    <div class="row mb-4" id="seccionBusqueda">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-search text-primary" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">Buscar Cliente por DUI</h4>
                        <p class="text-muted">Ingresa el DUI del cliente para ver su historial de préstamos</p>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <input type="text" id="dui" class="form-control form-control-lg dui"
                                       placeholder="Ejemplo: 12345678-9" maxlength="10">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-primary btn-lg w-100" onclick="buscarCliente()">
                                <i class="fas fa-search me-2"></i>Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Message -->
    <div class="alert alert-danger" id="mensajeError" style="display: none;">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <span id="textoError"></span>
    </div>

    <!-- Información del Cliente -->
    <div class="row mb-4" id="seccionCliente" style="display: none;">
        <div class="col-12">
            <div class="card cliente-info-card" id="clienteInfoCard">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-user-circle text-primary me-3" style="font-size: 2.5rem;"></i>
                                <div>
                                    <h3 class="mb-1" id="clienteNombre">-</h3>
                                    <span class="badge badge-estado" id="clienteEstadoBadge">
                                        <i class="fas fa-check-circle me-1"></i>Cliente Activo
                                    </span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>DUI:</strong> <span id="clienteDui">-</span></p>
                                    <p class="mb-2"><strong>Teléfono:</strong> <span id="clienteTelefono">-</span></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Gestor:</strong> <span id="clienteGestor">-</span></p>
                                    <p class="mb-2"><strong>Estado:</strong> <span id="clienteEstadoTexto">-</span></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button class="btn btn-secondary" onclick="nuevaBusqueda()">
                            <i class="fas fa-search me-2"></i>Nueva Búsqueda
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Seccion estadisticas del cliente -->
    <div class="row mb-4" id="seccionEstadisticas" style="display: none;">
        <div class="col-12">
            <div class="card cliente-info-card" id="clienteInfoCard">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="mb-1">Solicitudes</h3>
                            <div class="chart-container">
                                <canvas id="pieChart" style="width: 50%; height: 50%"></canvas>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h3 class="mb-1">Prestamos</h3>
                            <div class="chart-container">
                                <canvas id="lineChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Préstamos -->
    <div class="row" id="seccionPrestamos" style="display: none;">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Historial de Préstamos
                    </h5>
                </div>
                <div class="card-body" id="listaPrestamos">
                    <!-- Los préstamos se cargarán aquí dinámicamente -->
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Detalle de Préstamo -->
    <div class="modal fade" id="modalDetallePrestamo" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-info-circle me-2"></i>
                        Detalle del Préstamo #<span id="modalPrestamoId">0</span>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalContenido">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary"></div>
                        <p class="mt-2">Cargando detalle del préstamo...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/prestamoxcliente.js"></script>